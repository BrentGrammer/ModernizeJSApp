{
  "name": "vanillajs",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "clean": "find wwwroot/js -not -path \"wwwroot/js/libs\" -not -path \"wwwroot/js/libs/*\" \\( -type f -o -type d -empty \\) -exec rm -rf {} +",
    "build": "npm run clean && vite build",
    "watch": "npm run clean && vite build --watch",
    "preview": "vite preview",
    "docker:down": "docker compose down",
    "start": "concurrently --raw --kill-others-on-fail \"docker compose up\" \"npm run watch\" || npm run docker:down\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "vite": "^5.3.1"
  }
}
